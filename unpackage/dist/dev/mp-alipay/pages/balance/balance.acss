
page {
	background-color: #f5f5f5;
}
page {
	margin: 0;
}
.bg-mine {
	width: 100%;
	height: 180px;
	background: green;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	background-image: -webkit-linear-gradient(top left, #e4393c, #ecd533);
	background-image: linear-gradient(to bottom right, #e4393c, #ecd533)
}
.bg-mine .bg-mine-portrait {
	width: 80px;
	height: 80px;
	overflow: hidden;
	margin: 0;
	padding: 0;
	border-radius: 50%
}
.bg-mine .bg-mine-portrait image {
	width: 80px;
	height: 80px;
	border-radius: 50%;
	object-fit: cover
}
.bg-mine .bg-mine-name {
	font-size: 16px;
	color: #FFF;
	line-height: 2.5em;
	height: 2.5em;
	font-weight: bold;
}
.bg-mine .bal-money {
	font-size: 20px;
	color: #fff;
	line-height: 1.5em;
	height: 1.5em;
	font-weight: bold;
}
.weui-grid {
	position: relative;
	float: left;
	padding: 10px 5px;
	width: 50%;
	box-sizing: border-box;
	text-decoration: none;
}
.history-title {
	padding: 10px;
	font-size: 14px;
	font-weight: 700;
	color: #333;
	background-color: #f5f5f5;
}
.navigator-hover {
	opacity: .8;
	background-color: #ddd;
}
#recharge {

	font-size: 14px;
	color: #333;
}
.recharge-container {
	background-color: #FFF;
	position: relative;
	/* border-radius: 15px; */
}
.weui-cell {

	margin-left: 30rpx;
	/* margin-right: 30rpx; */
	background-color: #fff;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	align-items: center;
	font-weight: 700;
	font-size: 1em;
	line-height: 2.5rem;
	height: 2.5rem;
	position: relative;

	line-height: 2.6em;
	height: 2.6em;
}
.weui-cell__hd {
	width: 30%;
	text-align: left;
	font-weight: bold;
}
.weui-cell__bd {
	width: 70%;
	text-align: left;
	font-weight: 400;

	line-height: 2.6em;
	height: 2.6em;
}
.mar-r15 {
	margin-right: 15px;
}
.icon-select:after {
	content: " ";
	display: inline-block;
	height: 10rpx;
	width: 10rpx;
	border-width: 2px 2px 0 0;
	border-color: #C8C8CD;
	border-style: solid;
	-webkit-transform: matrix(0.71, .71, -.71, .71, 0, 0);
	transform: matrix(0.71, .71, -.71, .71, 0, 0);
	position: relative;
	top: -2px;
	position: absolute;
	top: 50%;
	right: 20px;
	margin-top: -4px;
}
.weui-cell.weui-line:before {
	content: " ";
	position: absolute;
	left: 0;
	top: 0;
	right: 0;
	height: 1px;
	border-top: 1px solid #e5e5e5;
	color: #e5e5e5;
	-webkit-transform-origin: 0 0;
	transform-origin: 0 0;
	-webkit-transform: scaleY(.5);
	transform: scaleY(.5);
	left: 15px;
	z-index: 2;
}
.wx-button{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}

